@model List<CheeseMVC.Models.Cheese>

<h1>My Cheese</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>

@if (Model.Count == 0)
{
    <p>No cheese here!</p>
}


<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
        </tr>
    }
</table>

<table>
    <a href="/Cheese/Remove">Remove Cheese</a>
</table>